import biblio
from biblio import bibliotheque, commandes

"""Fichier principale"""

def main(): 
	"""Fonction principale"""
	b = bibliotheque.Bibliotheque()
	commande=" "
	while True: 
		commande = input("Entrez votre commande (M pour le Menu) ").upper()
		if commande == "M": 
			commandes.affiche_menu()
		elif commande == "NG":
			commandes.nouveau_genre(b)
		elif commande == "NL":
			commandes.nouveau_livre(b)
		elif commande == "LL":
			print(b)
		elif commande == "LG": 
			commandes.affiche_genre(b)
		elif commande == "SG": 
			commandes.supp_genre(b)
		elif commande == "SL":
			commandes.supp_livre(b)
		elif commande == "Q": 
			commandes.quit_menu(b)
			break
		else: 
			print("La commande '{}' est non valide.\nUtilis√© les commandes du menu:\n".format(commande))
			commandes.affiche_menu()
main()
